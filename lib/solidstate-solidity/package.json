    "@solidstate/library": "link:lib",
    "@solidstate/spec": "link:spec",
    "@solidstate/typechain-types": "link:typechain-types",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
