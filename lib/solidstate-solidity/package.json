    "prettier-plugin-solidity": "^1.3.1",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.5.2",
    "yarn-up": "^1.4.1"
